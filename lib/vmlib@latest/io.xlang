/*
- Xlang Basic IO File
*/

func int readLine(ptr_char:dest){
    for(ptr_char i=dest,^(i-1) != '\n',i=i+1){
        i;
        asm "mov reg0,[reg0]";
        asm "in 0,[reg0]";
    };
    return 0;
};

func int printLine(ptr_char:dest){
    for(ptr_char i=dest,^(i-1) != '\n',i=i+1){
        if(^i == '\0'){break;};
        i;
        asm "mov reg0,[reg0]";
        asm "out 0,[reg0]";
    };
    return 0;
};
